<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F2EE"
    tools:context=".Page_Interactions.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:alpha=".88"
        android:background="@drawable/backgroundimg"
        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="230dp"
        android:layout_height="49dp"
        android:fontFamily="@font/im_fell_great_primer_sc"
        android:gravity="center"
        android:text="Surf Tracker"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.061" />

    <Button
        android:id="@+id/Login_button_Before_login_screen"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_marginTop="252dp"
        android:backgroundTint="@color/green"
        android:fontFamily="@font/im_fell_great_primer_sc"
        android:text="Log In"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/SignUp_button"
        android:text="Sign Up"
        android:layout_width="200dp"
        android:backgroundTint="@color/green"
        android:fontFamily="@font/im_fell_great_primer_sc"
        android:layout_height="80dp"
        android:layout_marginTop="92dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Login_button_Before_login_screen"
        app:layout_constraintVertical_bias="0.303" />

</androidx.constraintlayout.widget.ConstraintLayout>